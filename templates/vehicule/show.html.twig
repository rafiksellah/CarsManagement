      <div class="col-md-7 col-sm-12">

      </div>
      <div class="col-md-7 col-sm-12">

      </div>
    </div>





    <div class="card mb-3">
        <div class="card-body">
            <table class="table table-striped ">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ vehicule.id }}</td>
                        <tr>
                            <th>ParcStationnementVille</th>
                            <td>{{ vehicule.parcStationnementVille }}</td>
                        </tr>
                        </tr>
                        <tr>
                            <th>Marque</th>
                            <td>{{ vehicule.mark }}</td>
                        </tr>
                        <tr>
                            <th>Model</th>
                            <td>{{ vehicule.model }}</td>
                        </tr>
                        <tr>
