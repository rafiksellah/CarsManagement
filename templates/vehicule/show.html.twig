{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
    <h1>Vehicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            <tr>
                <th>ParcStationnementVille</th>
                <td>{{ vehicule.parcStationnementVille }}</td>
            </tr>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.mark }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ vehicule.model }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ vehicule.immatriculation }}</td>
            </tr>
            <tr>
                <th>DateImmatriculation</th>
                <td>{{ vehicule.dateImmatriculation ? vehicule.dateImmatriculation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NombrePlace</th>
                <td>{{ vehicule.nombrePlace }}</td>
            </tr>
            <tr>
                <th>NombrePorte</th>
                <td>{{ vehicule.nombrePorte }}</td>
            </tr>
            <tr>
                <th>PhaseFinition</th>
                <td>{{ vehicule.phaseFinition }}</td>
            </tr>
            <tr>
                <th>Energie</th>
                <td>{{ vehicule.energie }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ vehicule.couleur }}</td>
            </tr>
            <tr>
                <th>DataAchat</th>
                <td>{{ vehicule.dataAchat ? vehicule.dataAchat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>KilometrageAchat</th>
                <td>{{ vehicule.kilometrageAchat }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ vehicule.prix }}</td>
            </tr>
            <tr>
                <th>Options</th>
                <td>{{ vehicule.options }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('vehicule_index') }}">Retour</a>

    <a class="btn btn-success"href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">Modifier</a>
    <div class="col-md-1">
    {{ include('vehicule/_delete_form.html.twig') }}
    </div>
{% endblock %}
