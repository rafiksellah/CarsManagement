                            <td>{{ vehicule.phaseFinition }}</td>
                        </tr>
                        <tr>
                            <th>Energie</th>
                            <td>{{ vehicule.energie }}</td>
                        </tr>
                        <tr>
                            <th>Couleur</th>
                            <td>{{ vehicule.couleur }}</td>
                        </tr>
                        <tr>
                            <th>DataAchat</th>
                            <td>{{ vehicule.dataAchat ? vehicule.dataAchat|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>KilometrageAchat</th>
                            <td>{{ vehicule.kilometrageAchat }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ vehicule.prix }}</td>
                        </tr>
                        <tr>
                            <th>Options</th>
                            <td>{{ vehicule.options|join(', ') }}</td>
                        </tr>
                    </tbody>
            </table>
        </div>
    </div> 
   
