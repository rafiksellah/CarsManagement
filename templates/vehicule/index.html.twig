{% extends 'base.html.twig' %}

{% block title %}Vehicule index{% endblock %}

{% block body %}
    <h1>Liste Vehicule</h1>
  <span><a class="btn btn-success"  href="{{ path('vehicule_new') }}"><i class="fa fa-plus"></i> Ajouter un Vehicule</a>  </span> 
<br><br>
<div class="container-fluid">
    <div class="card">
        <table id="dataTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Vehicule</th>
                    <th>Parc</th>
                    <th>Etat</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for vehicule in vehicules %}
                <tr>
                    <td>{{ vehicule.model }} {{ vehicule.immatriculation}}</td>
                    <td>
                    {% if vehicule.parcStationnementVille == "Marseille" %}
                    <span class="btn btn-info"> Marseille</span> 
                     {% else %}
                     <span class="btn btn-primary"> Bastia</span>   
                    {% endif %}
                    </td>
                    <td>
                    {% if vehicule.status == 0 %}
                     <span class="btn btn-danger"> Resérvé</span> 
                     {% else %}
                     <span class="btn btn-success"> Libre</span>   
                    {% endif %}
                    </td>
                    <td>
                        <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Action
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="{{ path('vehicule_show', {'id': vehicule.id}) }}"><i class="fa fa-search"></i> Afficher le vehicule</a>
                            <li><a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}"><span class="glyphicon glyphicon-pencil"></span> Modifier le vehicule</a>
                            <li><a href="#">{{ include('vehicule/_delete_form.html.twig') }}</a></li>
                        </ul>
                        </div>
                 </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
{% endblock %}
