<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>CarMangement | Dashboard</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>



    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
  </head>
  <body class="skin-blue">

    <div class="wrapper">
      
      <header class="main-header">
        <a href="{{ path('user_index') }}" class="logo"><b>CarMangement</b></a>
        <nav class="navbar navbar-static-top" role="navigation">
          <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
          </a>
          <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                {% if app.user %}
                  <li class="dropdown user user-menu">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <img src="{{ asset('dist/img/avatar.png')}}" class="user-image" alt="User Image"/>
                    <span class="hidden-xs">{{ app.user.email }} </span>
                  </a>
                  <ul class="dropdown-menu">
                    <li class="user-header">
                      <img src="{{ asset('dist/img/avatar.png')}}" class="img-circle" alt="User Image" />
                      <p>{{app.user.email}}</p>
                    </li>
                    <li class="user-footer">
                      <div class="pull-right">
                        <a href="{{ path('app_logout')}}" class="btn btn-default btn-flat">Sign out</a>
                      </div>
                    </li>
                  </ul>
                {% endif %}
              </li>
            </ul>
          </div>
        </nav>
      </header>
      <aside class="main-sidebar">
        <section class="sidebar">
          <div class="user-panel">
            <div class="pull-left image">
              <img src="{{ asset('dist/img/avatar.png')}}" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
              <p>{{ app.user.email }}</p>
            </div>
          </div>
          <ul class="sidebar-menu">
            <li class="treeview">
              <a href="{{ path('dashboard')}}">
                <i class="fa fa-dashboard"></i> <span>Tableau de bord</span> <i></i>
              </a>
            </li>
            <li class="treeview">
             
                <li><a href="{{ path('vehicule_index') }}"><i class="fa fa-car"></i>VÃ©hicule</a></li>
                <li><a href="{{ path('location_index') }}"><i class="fa fa-key"></i> Location</a></li>
                <li><a href="{{ path('depenses_index') }}"><i class="fa fa-money"></i> Depenses</a></li>
                <li><a href="{{ path('statestic') }}"><i class="fa fa-bar-chart-o"></i> Statistiques</a></li>
                <li><a href="{{ path('user_index') }}"><i class="fa fa-user"></i> Utilisateurs</a></li>
          </ul>
        </section>
      </aside>
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
          
            <div class="col">
             {% block body %}
             
             {% endblock %}
            </div>
          </div>
        </section>
      </div>
    </div>
    <script src="{{asset('plugins/jQuery/jquery.min.js')}}"></script>


    {% block javascripts %}
    <script>
        $('#dataTable').DataTable({
            scrollY:        '100vh',
            scrollCollapse: true
         });
    </script>
    {% endblock %}
  </body>
</html>