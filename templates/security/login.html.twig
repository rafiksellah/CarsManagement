{% extends 'baseLogin.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <div class="col-md-5 col-sm-11">
        <h1 class="h2 text-center pt-4 mb-4 text-light">Cars Management</h1>
        <div class="card">
            <div class="card-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h4 mb-3 font-weight-normal text-center">Se Connecter</h1>
                    <div class="form-group">
                    <label for="inputEmail">Adresse email</label>
                    <input  class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    </div>
                    <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input  class="form-control" type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                    <div class="d-flex justify-content-center mt-4 mb-4">
                        <button class="btn btn-success" type="submit">
                            Se connecter
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
{% endblock %}
