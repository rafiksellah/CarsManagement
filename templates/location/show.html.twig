{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>PlateformeLocation</th>
                <td>{{ location.plateformeLocation }}</td>
            </tr>
            <tr>
                <th>ParcStationnement</th>
                <td>{{ location.parcStationnement }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ location.dateDebut ? location.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ location.dateFin ? location.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Remarque</th>
                <td>{{ location.remarque }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ location.prix }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ location.service }}</td>
            </tr>
            <tr>
                <th>Ajustement</th>
                <td>{{ location.ajustement }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('location_index') }}">Retour</a>

    <a class="btn btn-success" href="{{ path('location_edit', {'id': location.id}) }}">edit</a>
    <div class="col-md-1">
        {{ include('location/_delete_form.html.twig') }}
    </div>
{% endblock %}
