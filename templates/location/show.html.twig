{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <br><br>


    <div class="row mb-4">
      <div class="col-1"><a class="btn btn-info" href="{{ path('location_index') }}">Retour</a></div>
      <div class="col-2"><a class="btn btn-success" href="{{ path('location_edit', {'id': location.id}) }}" style="width:100%"><i class="fa fa-edit"></i> Modifier</a></div>
      <div class="col-4">{{ include('location/_delete_form.html.twig') }}</div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="h3">Location N° : {{location.id}} </h2>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Plateforme de Location</th>
                        <td>{{ location.plateformeLocation }}</td>
                    </tr>
                    <tr>
                        <th>Parc de Stationnement</th>
                        <td>{{ location.parcStationnement }}</td>
                    </tr>
                    <tr>
                        <th>Véhicule</th>
                        <td>{{ location.idVehicule.model }} - {{ location.idVehicule.immatriculation }}</td>
                    </tr>
                    <tr>
                        <th>Date de début</th>
                        <td>{{ location.dateDebut ? location.dateDebut|date('d/m/Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date de fin</th>
                        <td>{{ location.dateFin ? location.dateFin|date('d/m/Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Remarque</th>
                        <td>{{ location.remarque }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ location.prix }} €</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
