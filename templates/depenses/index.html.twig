{% extends 'base.html.twig' %}

{% block title %}Depenses {% endblock %}

{% block body %}
    <h1>Liste Depenses </h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>NatureLibelle</th>
                <th>Prix</th>
                <th>Kilometrage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for depense in depenses %}
            <tr>
                <td>{{ depense.id }}</td>
                <td>{{ depense.date ? depense.date|date('Y-m-d') : '' }}</td>
                <td>{{ depense.natureLibelle }}</td>
                <td>{{ depense.prix }}</td>
                <td>{{ depense.kilometrage }}</td>
                <td>
                    <a class="btn btn-success"  href="{{ path('depenses_show', {'id': depense.id}) }}">show</a>
                    <a class="btn btn-info"  href="{{ path('depenses_edit', {'id': depense.id}) }}">edit</a>
                                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary"  href="{{ path('depenses_new') }}">Ajouter depense</a>
{% endblock %}
